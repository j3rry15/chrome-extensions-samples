{
  "manifest_version": 3,
  "name": "EF Entity Debugger",
  "version": "1.0",
  "description": "Helps to debug issues with entities",
  "action": {
    "default_title": "Click to open panel"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": ["sidePanel", "tabs", "scripting", "storage", "activeTab"],
  "host_permissions":["http://*/*", "https://*/*"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
